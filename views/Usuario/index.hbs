<div class="container">
    <h1 class="my-4">Postagens</h1>

    {{#if message}}
        <div class="alert alert-{{message.[0]}}">
            {{message.[1]}}
        </div>
    {{/if}}

    <a href="/usuario/create" class="btn btn-success mb-3">Criar Novo Post</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Senha</th>
                <th>Seguidores</th>
                <th>Data de Criação</th>
            </tr>
        </thead>
        <tbody>
            {{#each posts}}
                <tr>
                    <td>{{this.id}}</td>
                    <td>{{this.nome}}</td>
                    <td>{{this.senha}}</td>
                    <td>{{this.seguidores}}</td>
                    <td>{{this.dataCriacao}}</td>
                    <td>
                        <a href="/usuario/{{this.id}}" class="btn btn-info btn-sm">Ver</a>
                        <a href="/usuario/{{this.id}}/edit" class="btn btn-warning btn-sm">Editar</a>
                        <form action="/usuario/{{this.id}}?_method=DELETE" method="POST" style="display: inline;">
                            <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                        </form>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="6" class="text-center">Nenhum usuário encontrado.</td>
                </tr>
            {{/each}}
        </tbody>
    </table>
</div>