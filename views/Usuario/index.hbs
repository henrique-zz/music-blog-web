<div class="container">
    <h1 class="my-4">Usuários</h1>

    {{#if message}}
    <div class="alert alert-{{message.[0]}}">
        {{message.[1]}}
    </div>
    {{/if}}

    <a href="/usuario/create" class="btn btn-success mb-3">Criar Novo Usuário</a>

    <table class="table table-bordered">
        <thead>
            <tr>
                <th>ID</th>
                <th>Nome</th>
                <th>Senha</th>
                <th>Seguidores</th>
                <th>Data de Criação</th>
                <th>Ações</th>
            </tr>
        </thead>
        <tbody>
            {{#each usuarios}}
            <tr>
                <td>{{this.id}}</td>
                <td>{{this.nome}}</td>
                <td>{{this.senha}}</td>
                <td>{{this.seguidores}}</td>
                <td>{{this.dataCriacao}}</td>
                <td>
                    <a href="/usuario/{{this.id}}" class="btn btn-info btn-sm">Ver</a>
                    <a href="/usuario/{{this.id}}/edit" class="btn btn-warning btn-sm">Editar</a>
                    <form action="/usuario/{{this.id}}/delete" method="POST" style="display: inline;">
                        <input type="hidden" name="_method" value="DELETE">
                        <button type="submit" class="btn btn-danger btn-sm">Excluir</button>
                    </form>
                </td>
            </tr>
            {{else}}
            <tr>
                <td colspan="6" class="text-center">Nenhum usuário encontrado.</td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>